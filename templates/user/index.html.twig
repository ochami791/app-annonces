{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="mt-5">New User</h1>

    {% if error %}
        <div class="alert alert-danger mt-2 mb-2">
            {{ error }}
        </div>
    {% endif %}

    <form action="{{ path('create-new') }}" method="post">
        <div class="form-group">
            <label for="userName">Nom</label>
            <input type="text" id="userName" name="_username" class="form-control"
                   value="{{ name }}">
        </div>

        <div class="form-group">
            <label for="last_name">Pr√©nom</label>
            <input type="text" id="last_name" name="_last_name" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Connexion</button>
    </form>

{% endblock %}